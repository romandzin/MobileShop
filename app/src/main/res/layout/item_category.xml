<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_background">

    <ImageView
        android:id="@+id/ic_category"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:padding="20dp"
        android:src="@drawable/ic_phone"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ellipse_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/grey_text" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:text="Phones"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/ic_category"
        app:layout_constraintEnd_toEndOf="@id/ic_category"
        app:layout_constraintTop_toBottomOf="@id/ic_category"/>




</androidx.constraintlayout.widget.ConstraintLayout>